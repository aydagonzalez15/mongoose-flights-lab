<%- include('../partials/header') %>

<h2>Flight List</h2>
<table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight #</th>
        <th>Depart time</th>
      </tr>
    </thead>
    <tbody>

<% flights.forEach(function(f) { %> 
    <tr>
        <td><%= f.airline %></td>
        <td><%= f.airport %></td>
        <td><%= f.flightNo %></td>
        <td style= "<%= f.departs < Date.now() ? 'color:red' : null %>"> <%= f.departs %></td>
    </tr>

<% }) %>
</tbody>
</table>
<%- include('../partials/footer') %>